<div>
  <div>
    <h1>
      List of all message threads
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new message thread
    </h2>

    <form action="/insert_message_thread" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="messages_count_box">
          Messages count
        </label>

        <input type="text" id="messages_count_box" name="query_messages_count">
      </div>

      <button>
        Create message thread
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          User
        </th>

        <th>
          Messages count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_message_threads.each do |a_message_thread| %>
      <tr>
        <td>
          <%= a_message_thread.id %>
        </td>

        <td>
          <%= a_message_thread.title %>
        </td>

        <td>
          <%= a_message_thread.user_id %>
        </td>

        <td>
          <%= a_message_thread.messages_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_message_thread.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_message_thread.updated_at) %> ago
        </td>

        <td>
          <a href="/message_threads/<%= a_message_thread.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
